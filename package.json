{
  "name": "typescript-pro-library-project",
  "version": "1.0.0",
  "description": "A micro library written from scratch to take advantage of the power of Typescript",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "build": "tsc -p tsconfig.json",
    "precommit": "npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ebautistaiwa/typescript-pro-library-project.git"
  },
  "author": "ebautista",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ebautistaiwa/typescript-pro-library-project/issues"
  },
  "homepage": "https://github.com/ebautistaiwa/typescript-pro-library-project#readme",
  "devDependencies": {
    "@types/jest": "^21.1.4",
    "@types/node": "^8.0.45",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "ts-jest": "^21.1.3",
    "typescript": "^2.5.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.spec\\.ts$"
  },
  "lint-staged": {
    "src/**/*.ts": ["prettier --write --no-semi --single-quote --trailing-comma es5", "git add"]
  }
}
